<?xml version="1.0" encoding="UTF-8"?>

<!-- enable this demos menu with the command-line option "-demosMenu models.xml" -->
<ModelMenu xmlns="http://www.artisynth.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.artisynth.org src/artisynth/core/modelmenu/modelmenu.xsd">

	<menu text="Distribution" icon="src/artisynth/core/gui/icon/artisynth16.gif">
		<!-- loads a regular .demoModels file and places models in the current submenu -->
		<demosFile file=".demoModels" />
	</menu>
	<menu text="Demos">
		<include file="src/artisynth/core/modelmenu/demos_hierarchical.xml" />
	</menu>
	<menu text="All models">
		<!-- loads all RootModels in the root package and displays in compact hierarchical 
			format -->
		<package source="artisynth.models" view="hierarchical" />
	</menu>

</ModelMenu>
