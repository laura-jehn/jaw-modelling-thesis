<?xml version="1.0" encoding="utf-8"?>

<!-- enable this demos menu with the command-line option "-demosMenu demoMenu.xml" -->
<ModelMenu xmlns="http://www.artisynth.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.artisynth.org src/artisynth/core/modelmenu/modelmenu.xsd">

  <menu text="Demos"> 
    <!-- loads a regular .demoModels file and places models in the current submenu -->
    <demosFile file=".demoModels" />
  </menu>
  <menu text="All demos">
    <!-- loads all RootModels in the root package and displays in compact hierarchical format -->
    <package source="artisynth.demos" view="hierarchical" />
  </menu>
  <menu text="Models">
    <!-- loads models from the .mainModels file and places
      models in the current submenu -->
    <demosFile file=".mainModels" />
  </menu>
  <menu text="All models">
    <!-- loads all RootModels in the root package and displays in compact hierarchical format -->
    <package source="artisynth.models" view="hierarchical" />
  </menu>
  <separator/>
  <menu text="Recent">
  	<history/>
  </menu>
</ModelMenu>
